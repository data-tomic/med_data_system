# Пример файла переменных окружения для med_data_system
# Скопируйте этот файл в .env и заполните своими значениями
# НИКОГДА НЕ КОММИТЬТЕ ФАЙЛ .env В GIT!

# Настройки Django
# Сгенерируйте новый ключ командой: python -c 'from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())'
SECRET_KEY=ВАШ_СЕКРЕТНЫЙ_КЛЮЧ_DJANGO
# Установите False для продакшена
DEBUG=True

# Настройки базы данных PostgreSQL (для docker-compose)
POSTGRES_DB=meddata
POSTGRES_USER=meduser
POSTGRES_PASSWORD=your_strong_password # Используйте надежный пароль
DATABASE_HOST=db # Имя сервиса БД в docker-compose.yml
DATABASE_PORT=5432

# Другие переменные (если появятся)
# SOME_OTHER_VARIABLE=value
